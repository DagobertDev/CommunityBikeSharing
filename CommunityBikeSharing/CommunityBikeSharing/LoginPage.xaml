<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityBikeSharing.LoginPage">
    <StackLayout>
        <Label Text="Login" FontSize="Title" Padding="30,10,30,10"/>

        <Label Text="Email eingeben:" Margin="30,0,30,0"/>
        <Entry x:Name="EmailField" Keyboard="Email" Margin="30,0,30,0"/>

        <Label Text="Password eingeben:" Margin="30,0,30,0"/>
        <Entry x:Name="PasswordField" IsPassword="True" Margin="30,0,30,0"/>

        <Button Text="Login" Clicked="Login" Margin="30,0,30,0"/>

        <Button Text="Noch kein Account? Hier registrieren" Clicked="RedirectToRegistration" Margin="30,0,30,0"/>
    </StackLayout>
</ContentPage>
